{
  "name": "replacefy",
  "description": "A simple GitHub Action to replace env vars",
  "version": "1.0.0",
  "author": "Eduardo Borges <euduardoborges@gmail.com>",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/eduardoborges/replacefy",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eduardoborges/replacefy.git"
  },
  "bugs": {
    "url": "https://github.com/eduardoborges/replacefy/issues"
  },
  "keywords": [
    "actions",
    "replace",
    "env",
    "env vars"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "ncc build src/index.ts --license licenses.txt",
    "dev": "ncc build src/index.ts --license licenses.txt --watch",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "11.0.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "9.2.1",
    "@semantic-release/npm": "11.0.0",
    "@semantic-release/release-notes-generator": "12.0.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.4",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vercel/ncc": "^0.38.0",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "jest": "^29.7.0",
    "semantic-release": "22.0.5",
    "simple-git-hooks": "2.9.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint",
    "pre-push": "npm run test && npm run build"
  }
}
